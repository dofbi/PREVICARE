    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-items-center">
      <div class="grayscale hover:grayscale-0 transition-all duration-300">
        <Image src="/placeholder-logo.svg" alt="Partenaire 1" class="h-12 w-auto" width={100} height={48} />
