---
import DecorativeShapes from "./DecorativeShapes.astro";
import { cn } from "../lib/utils";

interface Props {
  background?: "white" | "accent" | "pattern" | "gradient-primary";
  decorative?: boolean;
  decorativeVariant?: "primary" | "secondary" | "mixed";
  className?: string;
  id?: string;
}

const {
  background = "white",
  decorative = false,
  decorativeVariant = "primary",
  className,
  id,
} = Astro.props;

const backgroundClasses = {
  white: "bg-white",
  accent: "bg-accent",
  pattern: "bg-gradient-to-br from-accent to-white",
  "gradient-primary": "bg-gradient-primary",
};
---

<section
  id={id}
  class={cn("relative w-full py-16 md:py-24 overflow-visible", backgroundClasses[background], className)}
>
  {decorative && <DecorativeShapes variant={decorativeVariant} />}
  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <slot />
  </div>
</section>
