---
export interface Props {
  value: string;
  label: string;
  description: string;
  trend?: "up" | "down";
}

const { value, label, description, trend } = Astro.props;
---

<div class="border-none shadow-soft hover:shadow-card transition-all duration-300 group bg-white rounded-lg">
  <div class="pt-6 text-center p-6">
    <div class="flex items-center justify-center mb-2">
      <span class="text-2xl md:text-3xl font-bold text-primary group-hover:text-secondary transition-colors">
        {value}
      </span>
      {trend && (
        <div class="ml-2">
          {trend === "up" ? (
            <svg class="h-5 w-5 text-senegal-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          ) : (
            <svg class="h-5 w-5 text-senegal-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
            </svg>
          )}
        </div>
      )}
    </div>
    <h3 class="font-semibold text-primary mb-1">{label}</h3>
    <p class="text-sm text-primary/70">{description}</p>
  </div>
</div>
