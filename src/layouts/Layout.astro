---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "La première plateforme de conciergerie RH en Afrique. Archivage sécurisé, suivi IPRES, conseil juridique et gestion de carrière." } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
