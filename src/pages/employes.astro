---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SectionTitle from '../components/SectionTitle.astro';

const { user } = Astro.locals;
const isLoggedIn = !!user;
const isEmployee = user?.user_metadata?.role === 'employee';

const essentielUrl = isLoggedIn
  ? '/espace-employes/abonnement/souscrire?plan=essentiel'
  : '/inscription?redirect=' + encodeURIComponent('/espace-employes/abonnement/souscrire?plan=essentiel');

const sereniteUrl = isLoggedIn
  ? '/espace-employes/abonnement/souscrire?plan=serenite'
  : '/inscription?redirect=' + encodeURIComponent('/espace-employes/abonnement/souscrire?plan=serenite');

const integralUrl = isLoggedIn
  ? '/espace-employes/abonnement/souscrire?plan=integral'
  : '/inscription?redirect=' + encodeURIComponent('/espace-employes/abonnement/souscrire?plan=integral');
---

<Layout title="Protection RH pour les Travailleurs - PREVICARE">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-yellow-50">
    <!-- Hero Section -->
    <section class="relative py-20 px-4 text-center bg-gradient-to-r from-primary via-primary-dark to-primary text-white">
      <div class="absolute inset-0 bg-black/10"></div>
      <div class="relative max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Protection RH et Juridique pour les Travailleurs
