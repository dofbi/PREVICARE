
---
import Layout from '../../layouts/Layout.astro';
import DashboardShell from '../../components/DashboardShell.astro';

const { user } = Astro.locals;

// Vérifier si l'utilisateur est connecté
if (!user) {
  return Astro.redirect('/connexion');
}

// Vérifier si l'utilisateur a le bon rôle
const userRole = user.user_metadata?.role;

if (userRole !== 'employee') {
  return Astro.redirect('/connexion');
}
---

<Layout title="Espace Employés - PREVICARE EMPLOI">
  <DashboardShell title="Espace Employés">
    
    <!-- Hero Section -->
    <div class="relative w-full h-48 mb-6 rounded-xl overflow-hidden">
      <div
        class="absolute inset-0 z-0"
        style="background-image: url('https://images.unsplash.com/photo-1664575602554-2087b04935a5?q=80&w=2070&auto=format&fit=crop'); background-size: cover; background-position: center;"
      >
        <div class="absolute inset-0 bg-gradient-to-r from-secondary/80 to-secondary/60"></div>
      </div>

      <div class="relative h-full flex flex-col justify-center px-6 z-10">
        <h1 class="text-2xl font-bold tracking-wide text-white">
          Bienvenue dans votre espace personnel
        </h1>
        <p class="text-white/90">Accédez à vos documents, informations et services</p>
        {user.user_metadata?.first_name && (
          <p class="text-sm text-white/70">
            {user.user_metadata.first_name} {user.user_metadata.last_name}
          </p>
        )}
      </div>
    </div>

    <!-- Services disponibles -->
    <div class="mt-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">Vos Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        <!-- Documents -->
        <a href="/espace-employes/documents" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-blue-100 rounded-lg">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Mes Documents</h3>
                <p class="text-sm text-gray-600">Coffre-fort numérique sécurisé</p>
              </div>
            </div>
          </div>
        </a>

        <!-- IPRES -->
        <a href="/espace-employes/ipres" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-green-100 rounded-lg">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Suivi IPRES</h3>
                <p class="text-sm text-gray-600">Cotisations et projections</p>
              </div>
            </div>
          </div>
        </a>

        <!-- Juridique -->
        <a href="/espace-employes/juridique" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow border-l-4 border-l-red-500">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-red-100 rounded-lg">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Conseil Juridique</h3>
                <p class="text-sm text-gray-600">Protection juridique professionnelle</p>
                <span class="inline-flex items-center px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full mt-1">
                  Nouveau
                </span>
              </div>
            </div>
          </div>
        </a>

        <!-- Carrière -->
        <a href="/espace-employes/carriere" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-purple-100 rounded-lg">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2h8z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Ma Carrière</h3>
                <p class="text-sm text-gray-600">Évolution professionnelle</p>
              </div>
            </div>
          </div>
        </a>

        <!-- Assistance -->
        <a href="/espace-employes/assistance" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-orange-100 rounded-lg">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Assistance</h3>
                <p class="text-sm text-gray-600">Support et aide</p>
              </div>
            </div>
          </div>
        </a>

        <!-- Notifications -->
        <a href="/espace-employes/notifications" class="block">
          <div class="bg-white rounded-lg border shadow-sm p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center space-x-4">
              <div class="p-3 bg-indigo-100 rounded-lg">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Notifications</h3>
                <p class="text-sm text-gray-600">Messages et alertes</p>
              </div>
            </div>
          </div>
        </a>

      </div>
    </div>

  </DashboardShell>
</Layout>
