---
import Layout from '../../../../layouts/Layout.astro';
import DashboardShell from '../../../../components/DashboardShell.astro';
import { getCollection, render } from 'astro:content';

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect('/connexion');
}

// Charger toutes les FAQs et les trier par ordre
const faqs = await getCollection('faq');
const sortedFaqs = faqs.sort((a, b) => a.data.order - b.data.order);

// Rendre le contenu HTML pour chaque FAQ
const renderedFaqs = await Promise.all(
  sortedFaqs.map(async (faq) => ({
    ...faq,
    rendered: await render(faq),
  }))
);

// Grouper par cat√©gorie
const categories = {
  general: { label: 'G√©n√©ral', color: 'blue', icon: '‚ùì' },
  documents: { label: 'Documents', color: 'green', icon: 'üìÑ' },
  // ipres: { label: 'IPRES', color: 'purple', icon: 'üí∞' },
  juridique: { label: 'Juridique', color: 'red', icon: '‚öñÔ∏è' },
  // carriere: { label: 'Carri√®re', color: 'orange', icon: 'üéØ' },
  technique: { label: 'Technique', color: 'slate', icon: '‚öôÔ∏è' },
};

const groupedFaqs = Object.entries(categories).reduce((acc, [key, category]) => {
  acc[key] = {
    ...category,
    items: renderedFaqs.filter(faq => faq.data.category === key),
  };
  return acc;
}, {} as Record<string, any>);
---

<Layout title="FAQ - PREVICARE EMPLOI">
  <DashboardShell title="Questions Fr√©quentes (FAQ)">
    
    <!-- Breadcrumbs -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li><a href="/espace-employes" class="text-gray-400 hover:text-gray-500">Tableau de bord</a></li>
        <li><span class="text-gray-300">/</span></li>
        <li><a href="/espace-employes/assistance" class="text-gray-400 hover:text-gray-500">Assistance</a></li>
        <li><span class="text-gray-300">/</span></li>
        <li><span class="text-gray-500">FAQ</span></li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-50 to-blue-100 border border-blue-200 rounded-lg p-6 mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Questions Fr√©quemment Pos√©es</h1>
      <p class="text-gray-700">Trouvez les r√©ponses aux questions les plus courantes sur PREVICARE EMPLOI</p>
    </div>

    <!-- Navigation par cat√©gorie -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-2">
        {Object.entries(categories).map(([key, category]) => (
          <a
            href={`#category-${key}`}
            class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium transition-all
              bg-white border-2 hover:border-blue-500 hover:bg-blue-50
              text-gray-700 hover:text-blue-700"
          >
            <span class="mr-2">{category.icon}</span>
            {category.label} ({groupedFaqs[key].items.length})
          </a>
        ))}
      </div>
    </div>

    <!-- FAQ par cat√©gorie -->
    <div class="space-y-8">
      {Object.entries(groupedFaqs).map(([key, category]) => {
        if (category.items.length === 0) return null;

        const colorClasses = {
          blue: 'border-blue-200 bg-blue-50',
          green: 'border-green-200 bg-green-50',
          purple: 'border-purple-200 bg-purple-50',
          red: 'border-red-200 bg-red-50',
          orange: 'border-orange-200 bg-orange-50',
          slate: 'border-slate-200 bg-slate-50',
        };

        const badgeColors = {
          blue: 'bg-blue-100 text-blue-800',
          green: 'bg-green-100 text-green-800',
          purple: 'bg-purple-100 text-purple-800',
          red: 'bg-red-100 text-red-800',
          orange: 'bg-orange-100 text-orange-800',
          slate: 'bg-slate-100 text-slate-800',
        };

        return (
          <section data-key={key} id={`category-${key}`} class="scroll-mt-20">
            <!-- En-t√™te de cat√©gorie -->
            <div class={`border-l-4 border-l-${category.color}-500 pl-4 mb-4`}>
              <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
                <span text-xl>{category.icon}</span>
                {category.label}
              </h2>
              <p class="text-sm text-gray-600 mt-1">{category.items.length} question{category.items.length > 1 ? 's' : ''}</p>
            </div>

            <!-- Questions -->
            <div class="space-y-3 mb-8">
              {category.items.map((faq: any) => (
                <details
                  class={`group border-2 rounded-lg overflow-hidden transition-all hover:shadow-md ${colorClasses[category.color as keyof typeof colorClasses]}`}
                >
                  <summary class="flex items-center justify-between p-4 cursor-pointer select-none">
                    <div class="flex items-center gap-3 flex-1">
                      <span class="flex-shrink-0 w-6 h-6 rounded-full bg-white border-2 flex items-center justify-center text-xs font-bold text-gray-600 group-open:hidden">
                        +
                      </span>
                      <span class="flex-shrink-0 w-6 h-6 rounded-full bg-white border-2 flex items-center justify-center text-xs font-bold text-gray-600 hidden group-open:flex">
                        ‚àí
                      </span>
                      <h3 class="font-semibold text-gray-900 text-sm md:text-base group-open:text-blue-700">
                        {faq.data.question}
                      </h3>
                    </div>
                  </summary>

                  <!-- R√©ponse -->
                  <div class="px-4 pb-4 border-t-2 bg-white">
                    <div class="prose prose-sm max-w-none
                      prose-headings:text-gray-900 prose-headings:font-semibold
                      prose-p:text-gray-700 prose-p:leading-relaxed
                      prose-ul:text-gray-700 prose-ol:text-gray-700
                      prose-li:text-gray-700
                      prose-strong:text-gray-900
                      prose-a:text-blue-600 hover:prose-a:text-blue-700
                    ">
                      <faq.rendered.Content />
                    </div>
                  </div>
                </details>
              ))}
            </div>
          </section>
        );
      })}
    </div>

    <!-- Section d'aide suppl√©mentaire -->
    <div class="mt-12 bg-gradient-to-r from-purple-50 to-blue-50 border-2 border-purple-200 rounded-lg p-8">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 text-3xl">üí¨</div>
        <div class="flex-1">
          <h3 class="text-lg font-bold text-gray-900 mb-2">Vous n'avez pas trouv√© votre r√©ponse ?</h3>
          <p class="text-gray-700 mb-4">
            Notre assistant virtuel est disponible 24/7 pour vous aider avec toutes vos questions.
          </p>
          <div class="flex flex-col sm:flex-row gap-3">
            <a
              href="/espace-employes/assistance#chat"
              class="inline-flex items-center justify-center px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
            >
              Ouvrir le chat assistant ‚Üí
            </a>
            <a
              href="/espace-employes/notifications"
              class="inline-flex items-center justify-center px-6 py-2 bg-white border-2 border-blue-600 hover:bg-blue-50 text-blue-600 font-medium rounded-lg transition-colors"
            >
              Contacter le support
            </a>
          </div>
        </div>
      </div>
    </div>

  </DashboardShell>
</Layout>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }

  /* Scroll smooth pour les ancres */
  html {
    scroll-behavior: smooth;
  }
</style>
