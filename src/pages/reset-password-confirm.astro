import Layout from '../layouts/Layout.astro';
import { createClient } from '../lib/supabase';

// Récupérer les paramètres de l'URL
const url = new URL(Astro.request.url);
const code = url.searchParams.get('code');
const type = url.searchParams.get('type');

// Si pas de code, rediriger (le type peut être null dans certains cas)
if (!code) {
  return Astro.redirect('/reset-password');
}

// Vérifier et échanger le code
const supabase = createClient({
  request: Astro.request,
  cookies: Astro.cookies,
});

const { error } = await supabase.auth.exchangeCodeForSession(code);

if (error) {
  console.error('Erreur lors de l\'échange du code:', error);
  return Astro.redirect('/reset-password?error=invalid-link');
}

// Vérifier l'utilisateur après l'échange du code
const { data: userData } = await supabase.auth.getUser();
if (!userData.user) {
  return Astro.redirect('/reset-password?error=invalid-session');
}
